{
  "name": "nuvian-labs-boilerplate",
  "version": "1.0.0",
  "private": true,
  "description": "Production-ready Next.js boilerplate with auth, database, AI, payments, and analytics",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx scripts/seed.ts",
    "db:reset": "drizzle-kit drop && drizzle-kit push && pnpm db:seed",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "setup": "pnpm install && pnpm db:push",
    "clean": "rm -rf .next node_modules"
  },
  "dependencies": {
    "@ai-sdk/openai": "^1.0.0",
    "@hookform/resolvers": "^3.0.0",
    "@radix-ui/react-accordion": "^1.2.2",
    "@radix-ui/react-alert-dialog": "^1.1.4",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.4",
    "@radix-ui/react-dropdown-menu": "^2.1.4",
    "@radix-ui/react-label": "^2.1.1",
    "@radix-ui/react-select": "^2.1.4",
    "@radix-ui/react-separator": "^1.1.1",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-tabs": "^1.1.1",
    "@radix-ui/react-toast": "^1.2.4",
    "@react-email/components": "^0.0.27",
    "@stripe/stripe-js": "^4.0.0",
    "@upstash/ratelimit": "^2.0.0",
    "@upstash/redis": "^1.0.0",
    "@vercel/analytics": "^1.0.0",
    "ai": "^4.0.0",
    "better-auth": "^1.0.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "date-fns": "^4.0.0",
    "drizzle-orm": "^0.36.0",
    "inngest": "^3.0.0",
    "lucide-react": "^0.460.0",
    "nanoid": "^5.0.0",
    "next": "^15.1.0",
    "next-themes": "^0.4.0",
    "pino": "^9.0.0",
    "postgres": "^3.4.4",
    "posthog-js": "^1.184.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-email": "^3.0.2",
    "react-hook-form": "^7.0.0",
    "react-markdown": "^9.0.0",
    "recharts": "^2.0.0",
    "remark-gfm": "^4.0.0",
    "resend": "^4.0.0",
    "stripe": "^17.0.0",
    "tailwind-merge": "^2.0.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.0.0",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.0.0",
    "@sentry/nextjs": "^8.0.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^5.1.0",
    "autoprefixer": "^10.0.0",
    "drizzle-kit": "^0.29.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^15.1.0",
    "jsdom": "^27.1.0",
    "pino-pretty": "^11.0.0",
    "postcss": "^8.0.0",
    "prettier": "^3.0.0",
    "prettier-plugin-tailwindcss": "^0.6.0",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0"
  },
  "packageManager": "pnpm@10.18.2",
  "engines": {
    "node": ">=18.0.0"
  }
}
